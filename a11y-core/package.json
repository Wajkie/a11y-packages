{
  "name": "@wajkie/a11y-core",
  "version": "1.0.0",
  "description": "Framework-agnostic accessibility utilities for WCAG 2.1 AA compliance",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./locales": {
      "types": "./dist/locales/index.d.ts",
      "import": "./dist/locales/index.mjs",
      "require": "./dist/locales/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts src/locales/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/locales/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "type-coverage": "type-coverage",
    "type-coverage:detail": "type-coverage --detail",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "wcag-2.1",
    "wcag-aa",
    "aria",
    "screen-reader",
    "keyboard-navigation",
    "focus-management",
    "focus-trap",
    "i18n",
    "internationalization",
    "inclusive",
    "universal-design",
    "assistive-technology",
    "semantic-html",
    "web-accessibility",
    "vanilla-js",
    "typescript",
    "zero-dependencies"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wajkie"
  },
  "author": "Wajkie",
  "license": "MIT",
  "repository": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^13.3.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2hub.com/wajkie/a11y-core"
  },
  "bugs": {
    "url": "https://github.com/wajkie/a11y-core/issues"
  },
  "homepage": "https://github.com/wajkie/a11y-core#readme",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/utils": "^3.2.4",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^20.0.11",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "type-coverage": "^2.29.7",
    "typescript": "^5.7.2",
    "typescript-coverage-report": "^1.1.1",
    "vitest": "^2.1.8"
  },
  "typeCoverage": {
    "atLeast": 100,
    "strict": true,
    "ignoreFiles": [
      "src/__tests__/**/*.ts",
      "src/__tests__/**/*.tsx"
    ]
  }
}
