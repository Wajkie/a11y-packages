{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "typeCoverage": {
    "atLeast": 100,
    "strict": true,
    "ignoreFiles": [
      "src/__tests__/**/*.ts",
      "src/__tests__/**/*.tsx"
    ]
  }
}
